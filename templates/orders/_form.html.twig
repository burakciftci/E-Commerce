{{ include('messages.html.twig') }}

<form class="form-horizontal" name="order" action="{{ path('orders_new') }}" method="post">
    <fieldset>
        <label class="col-sm-2 control-label">Ödenecek Tutar :</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="orders[amount]" value="{{ total }}" placeholder="name" class="input-large"/>
        </div>
        <hr>
        KARGO ALICI BİLGİLERİ
        <hr>
        <label class="col-sm-2 control-label">ADI SOYADI</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="orders[name]" value="{{app.user.name }}" placeholder="name" class="input-large"/>
        </div>

        <label class="col-sm-2 control-label">ADRES</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="orders[address]" value="{{ app.user.address }}" placeholder="name" class="input-large"/>
        </div>
        <label class="col-sm-2 control-label">ŞEHİR</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="orders[city]" value="{{ app.user.city }}" placeholder="name" class="input-large"/>
        </div>

        <label class="col-sm-2 control-label">TELEFON</label>
        <div class="control-group" col-sm-5>
            <input type="number" name="orders[phone]" value="{{ app.user.phone }}" placeholder="name" class="input-large"/>
        </div>
        <hr>
        KREDİ KARTI BİLGİLERİ
        <hr>

        <label class="col-sm-2 control-label">ADI SAOYADI :</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="cardholdername"  placeholder="Kart Adı Soyadı" class="input-large"/>
        </div>

        <label class="col-sm-2 control-label">KART NUMARASI</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="cardnumber"  placeholder="Kart Numarası" class="input-large"/>
        </div>

        <label class="col-sm-2 control-label">SON KULLANMA TARİHİ</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="cardvaliddates"  placeholder="AY/YIL" class="input-large"/>
        </div>

        <label class="col-sm-2 control-label">GÜVENLİK KODU</label>
        <div class="control-group" col-sm-5>
            <input type="text" name="cardsecuritycode"  placeholder="GÜVENLİK KODU" class="input-large"/>
        </div>

        <input type="hidden" name="token" value="{{csrf_token('form-order') }}"  class="input-large"/>

        <label class="col-sm-2 control-label"></label>
        <div class="control-group" col-sm-5>
            <input class="shopBtn" type="submit"  value="SATIN AL"  />
        </div>



    </fieldset>
</form>
