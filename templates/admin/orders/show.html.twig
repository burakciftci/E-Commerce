{% extends 'adminbase.html.twig' %}

{% block title %}Sipariş Göster{% endblock %}

{% block content %}

<div id="page-wrapper" >
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Sipariş Göster

                </h2>
            </div>
                    {{ include ('messages.html.twig') }}

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ order.userid }}</td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td>{{ order.amount }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ order.name }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ order.address }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ order.city }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ order.phone }}</td>
                        </tr>

                        <form action="{{ path('admin_orders_update', {'id': order.id}) }}" method="post">


                            <tr>
                                <th>Shipinfo</th>
                                <td><textarea name="shipinfo" cols="100" rows="3"> {{ order.shipinfo }}</textarea></td>
                            </tr>




                            <tr>
                                <th> Admin Note</th>
                                <td><textarea name="note" cols="100" rows="3"> {{ order.note }}</textarea></td>
                            </tr>

                            <tr>
                                <th>Status</th>
                                <td><select name="status">
                                        <option>{{ order.status }}</option>
                                        <option>Accepted</option>
                                        <option>InShipping</option>
                                        <option>Canceled</option>
                                        <option>Completed</option>

                                    </select>



                                    <input type="submit" value="Güncelle">
                                </td>

                            </tr>
                        </form>

                        </tbody>
                    </table>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Product Name</th>
                            <th>Sale Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set total=0 %}
                        {% for rs in orderdetail %}
                            <tr>
                                <td>{{ rs.id }}</td>
                                <td>{{ rs.name }}</td>
                                <td>{{ rs.price }}</td>
                                <td>{{ rs.quantity }}</td>
                                <td>{{  rs.amount }}</td>
                                <td>{{ rs.status }}</td>
                            </tr>
                            {% set total=total+ rs.amount %}

                        {% endfor %}
                        <td colspan="5"><b>Toplam Alışveriş Tutarı: {{ total }} tl</b><br>

                        </tbody>
                    </table>

            <br>


            <!-- /. ROW  -->
        </div>
        <!-- /. PAGE INNER  -->
    </div>
</div>
    </div>


    <!-- /. PAGE WRAPPER  -->

{% endblock %}





