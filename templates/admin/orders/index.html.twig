{% extends 'adminbase.html.twig' %}

{% block title %}Sipariş Görüntüleme{% endblock %}

{% block content %}
<div id="page-wrapper" xmlns:javascript="http://www.w3.org/1999/xhtml">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Sipariş Listesi

                </h2>
            </div>
            <div class="col-md-6">
                <div class="table-responsive">

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>UserId</th>
                        <th>Amount</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Phone</th>
                        <th>Shipinfo</th>
                        <th>Note</th>

                        <th>Status</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.userid }}</td>
                            <td>{{ order.amount }}</td>
                            <td>{{ order.name }}</td>
                            <td>{{ order.address }}</td>
                            <td>{{ order.city }}</td>
                            <td>{{ order.phone }}</td>
                            <td>{{ order.shipinfo }}</td>
                            <td>{{ order.note }}</td>

                            <td>{{ order.status }}</td>

                            <td>
                                <a href="javascript:openWin('{{ path('admin_orders_show', {'id': order.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menubar=no,scrollBars=no,resizable=no,width=1000,height=750');">GÖSTER</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>

        <!-- /. ROW  -->
        <hr />

        <!-- /. ROW  -->
    </div>
    <!-- /. PAGE INNER  -->
</div>


    <!-- /. PAGE WRAPPER  -->

{% endblock %}

