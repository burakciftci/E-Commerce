{{ include('admin/messages.html.twig') }}


<form method="post">
    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#home" data-toggle="tab">Genel Bilgiler</a></li>

            <li class=""><a href="#profile" data-toggle="tab">Email Server</a></li>

            <li class=""><a href="#messages" data-toggle="tab">Hakkımızda</a></li>

            <li class=""><a href="#comicet" data-toggle="tab">İletişim</a></li>

            <li class=""><a href="#ref" data-toggle="tab">Referanslar</a></li>



        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="home">

                <div class="form-group">
                    <label >Adı</label>
                    <input type="text" name="setting[title]" value="{{ setting.title }}" class="form-control"  >
                </div>


                <div class="form-group">
                    <label >Anahtar kelime</label>
                    <input type="text" name="setting[keywords]" value="{{ setting.keywords }}" class="form-control">
                </div>


                <div class="form-group">
                    <label >Kısa Açıklama</label>
                    <input type="text" name="setting[price]" value="{{ setting.description }}" class="form-control">
                </div>

                <div class="form-group">
                    <label >Firma Adı</label>
                    <input type="text" name="setting[company]" value="{{ setting.company }}" class="form-control">
                </div>

                <div class="form-group">
                    <label >Adresi</label>
                    <input type="text" name="setting[address]" value="{{ setting.address }}" class="form-control">
                </div>

                <div class="form-group">
                    <label >Fax</label>
                    <input type="text" name="setting[fax]" value="{{ setting.fax }}" class="form-control">
                </div>
                <div class="form-group">
                    <label >Durum</label>
                    <select name="product[status]"  class="form-control">
                        <option>{{ setting.status }}</option>
                        <option>True</option>
                        <option>False</option>

                    </select>
                </div>
            </div>
            <div class="tab-pane fade" id="profile">

                <div class="form-group">
                    <label >Email Server</label>
                    <input type="text" name="setting[smtpserver]" value="{{ setting.smtpserver }}" class="form-control"  >
                </div>


                <div class="form-group">
                    <label >Email</label>
                    <input type="text" name="setting[smtpemail]" value="{{ setting.smtpemail }}" class="form-control">
                </div>


                <div class="form-group">
                    <label >Email Şifre</label>
                    <input type="text" name="setting[smtppassword]" value="{{ setting.smtppassword }}" class="form-control">
                </div>

                <div class="form-group">
                    <label >SMPT Port</label>
                    <input type="text" name="setting[smtpport]" value="{{ setting.smtpport }}" class="form-control">
                </div>

            </div>
            <div class="tab-pane fade" id="messages">

                <div class="form-group">
                    <label class="col-sm-2 control-label">Hakkımızda</label>
                    <textarea name="setting[aboutus]" id="aboutus" row="10" cols="100">{{ setting.aboutus }} </textarea>
                </div>

            </div>
            <div class="tab-pane fade" id="comicet">

                <div class="form-group">
                    <label class="col-sm-2 control-label">İletişim Bilgileri</label>
                    <textarea name="setting[contact]" id="contact" row="10" cols="100">{{ setting.contact }} </textarea>
                </div>


            </div>
            <div class="tab-pane fade" id="ref">

                <div class="form-group">
                    <label class="col-sm-2 control-label">Referanslar</label>
                    <textarea name="setting[referances]" id="refer" row="10" cols="100">{{ setting.referances }} </textarea>
                </div>

            </div>

        </div>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>
<script>
    ClassicEditor
        .create(document.querySelector('#aboutus'))
        .catch(error => {
            console.error(error)

        })
</script>

<script>
    ClassicEditor
        .create(document.querySelector('#contact'))
        .catch(error => {
            console.error(error)

        })
</script>
<script>
    ClassicEditor
        .create(document.querySelector('#refer'))
        .catch(error => {
            console.error(error)

        })
</script>