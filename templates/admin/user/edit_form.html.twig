{% extends 'adminbase.html.twig' %}

{% block title %}Kişi Düzenle{% endblock %}

{% block content %}
    <div id="page-wrapper" >
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Düzenleme Formu</h2>
                    <form method="post">
                        <div class="form-group">
                            <label >Adı Soyadı</label>
                            <input type="text" name="user[name]" value="{{ user.name }}" class="form-control"   placeholder="Adınız Soyadınız">

                        </div>
                        <div class="form-group">
                            <label >Email</label>
                            <input type="email" name="user[email]" value="{{ user.email }}" class="form-control"  placeholder="Email adresiniz">
                        </div>
                        <div class="form-group">
                            <label >Adres</label>
                            <input type="email" name="user[address]" value="{{ user.address }}" class="form-control"  placeholder=" adresiniz">
                        </div>
                        <div class="form-group">
                            <label >Şehir</label>
                            <input type="email" name="user[city]" value="{{ user.city }}" class="form-control"  placeholder=" Şehriniz">
                        </div>
                        <div class="form-group">
                            <label >Telefon</label>
                            <input type="phone" name="user[phone]" value="{{ user.phone }}" class="form-control"  placeholder=" ŞTelefon">
                        </div>
                        <div class="form-group">
                            <label >Şifre</label>
                            <input type="password" name="user[password]" value="{{ user.password }}" class="form-control"  placeholder="Şifreniz">
                        </div>
                        <div class="form-group">
                            <label >Türü</label>
                            <select name="user[roles]"  class="form-control">
                                {% for item in user.roles %}
                                     <option selected>{{ item }}</option>
                                {% endfor %}
                                <option>ROLE_ADMIN</option>
                                <option>ROLE_USER</option>
                                <option>ROLE_POWER</option>
                                <option>ROLE_MEMBER</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label >Aktiflik durumu</label>
                            <select name="user[status]"  class="form-control"  placeholder="...">
                                <option>{{ user.status }}</option>
                                <option>True</option>
                                <option>False</option>

                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>


            </div>

            <!-- /. ROW  -->
            <hr />

            <!-- /. ROW  -->
        </div>
        <!-- /. PAGE INNER  -->
    </div>


    <!-- /. PAGE WRAPPER  -->

{% endblock %}
