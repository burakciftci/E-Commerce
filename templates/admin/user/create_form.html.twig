{% extends 'adminbase.html.twig' %}

{% block title %}Üye Ekleme{% endblock %}

{% block content %}
    <div id="page-wrapper" >
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Üye Ekleme</h2>
                    <form method="post">
                        <div class="form-group">
                            <label >Adı Soyadı</label>
                            <input type="text" name="user[name]" class="form-control"   placeholder="Adınız Soyadınız">

                        </div>
                        <div class="form-group">
                            <label >Email</label>
                            <input type="email" name="user[email]" class="form-control"  placeholder="Email adresiniz">
                        </div>
                        <div class="form-group">
                            <label >Şifre</label>
                            <input type="password" name="user[password]"  class="form-control"  placeholder="Şifreniz">
                        </div>
                        <div class="form-group">
                            <label >Türü</label>
                            <select name="user[roles]" class="form-control">
                                <option>ROLE_ADMIN</option>
                                <option>ROLE_USER</option>
                                <option>ROLE_POWER</option>
                                <option>ROLE_MEMBER</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label >Aktiflik durumu</label>
                            <select name="user[status]" class="form-control"  placeholder="...">
                                <option>True</option>
                                <option>False</option>

                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>


            </div>

            <!-- /. ROW  -->
            <hr />

            <!-- /. ROW  -->
        </div>
        <!-- /. PAGE INNER  -->
    </div>


    <!-- /. PAGE WRAPPER  -->

{% endblock %}
