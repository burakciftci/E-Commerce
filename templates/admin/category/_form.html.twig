

<form method="post">
    <div class="form-group">
        <label >Parentid</label>
        <select name="category[parentid]"  class="form-control">

            <option value="{{category.parentid }}">{{category.title}}</option>
            <option value="0">Ana Kategori</option>
            {% for cat in catlist %}
                <option value="{{ cat.id }}">{{ cat.title }}</option>
            {% endfor %}




        </select>

    </div>
    <div class="form-group">
        <label >Title</label>
        <input type="text" name="category[title]" value="{{ category.title }}" class="form-control"  >
    </div>
    <div class="form-group">
        <label >Keywords</label>
        <input type="text" name="category[keywords]" value="{{ category.keywords }}" class="form-control">
    </div>
    <div class="form-group">
        <label >Description</label>
        <input type="text" name="category[description]" value="{{ category.description }}" class="form-control">
    </div>

    <div class="form-group">
        <label >status</label>
        <select name="category[status]"  class="form-control">
            <option>{{ category.status }}</option>
            <option>True</option>
            <option>False</option>

        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>