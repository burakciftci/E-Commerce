<section  class="homepage-slider" id="home-slider">
    <div class="flexslider">
        <ul class="slides">
            {% for rs in sliders %}
            <li>
                <a href="{{ path('product_detail', {'id': rs.id}) }}">
                    <img src="{{ asset('uploads') }}/images/{{ rs.image }}" alt=""width="960px" height="330" /></a>
                <div class="intro">
                    <h1>{{rs.title }}</h1>
                    <h1>{{ rs.description }}</h1>

                </div>
            </li>

            {% endfor %}
        </ul>
    </div>
</section>

